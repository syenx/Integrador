@model IEnumerable<ProIntegracao.Data.Entidade.Aluno>
<table class="table table-hover dt-responsive nowrap" cellspacing="0" id="alunos">
    <thead>
        <tr>
            <th class="text-left">NOME</th>
            <th class="text-left">CPF</th>
            <th class="text-left">DATA NASCIMENTO</th>

            <th class="text-left">SEXO</th>
            <th class="text-left">AÇÕES</th>
            
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {

                System.Globalization.CultureInfo culture = new System.Globalization.CultureInfo("pt-BR");
                var dataNascimento = item.DtNascimento;
                long cpf = (string.IsNullOrEmpty(item.CpfAluno)) ? 0 : Convert.ToInt64(item.CpfAluno);
                var docCpf = String.Format(@"{0:000\.000\.000\-00}", cpf);
                
                <tr>
                    <td>@item.Nome</td>
                    <td>@docCpf</td>
                    <td>@dataNascimento </td>
                 
                    <td>@item.Sexo.Nome.Substring(0,1)</td>
                    <td>
                        <a href="#" onclick="EditarAluno(@item.Id);" title="Editar registro">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>|
                        <a href="#" onclick="AbrirModalExcluir(@item.Id, 'Aluno');" title="Excluir registro">
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

