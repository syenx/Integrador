@model ProIntegracao.UI.ViewModel.StatusSituacaoAulaViewModel

@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.DtCadastro)
@Html.HiddenFor(model => model.DtExclusao)

<!-- NOME -->
<div class="form-group">
    @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-4 " })
    <div class="col-md-8">
        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control width250 ", maxlength = "100" })
    </div>
</div>
<!-- Identificado Aula -->
<div class="form-group">
    @Html.LabelFor(model => model.Identificador, new { @class = "control-label col-md-4 " })
    <div class="col-md-8">
        @Html.TextBoxFor(model => model.Identificador, new { @class = "form-control width250 ", maxlength = "5", onkeypress="return soNum(event);" })
    </div>
</div>
<!-- ESTADO -->
<div class="form-group">
    @Html.LabelFor(model => model.IdEstado, new { @class = "control-label col-md-4 " })
    <div class="col-md-8">
        @Html.DropDownListFor(model => model.IdEstado, new SelectList(Model.ListaEstado, "Value", "Text", Model.IdEstado),"Selecione", new { @class = "form-control width250" })
    </div>
</div>
<!--ATIVO-->
<div class="form-group">
    <label for="PerfilId" class="control-label col-md-4"></label>
    <div class="col-md-8">
        <!--ATIVO-->
        <input type="radio" name="ativo" id="ativo" value="true" @if (Model.DtExclusao == null) { @: checked="checked"
                                                                                     }>ATIVO

        <!--INATIVO-->
        <input type="radio" name="ativo" id="inativo" value="false" @if (Model.DtExclusao != null) { @: checked="checked"
                                                                                     }> INATIVO
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-6 col-md-10">
        <a href="#" id="salvarStatus" class="btn btn-info btn-lg" onclick="SalvarStatus();"><span class="glyphicon glyphicon-floppy-disk"></span> Salvar</a>
        <a href="#" id="cancelarStatus" data-dismiss="modal" class="btn btn-warning btn-lg"><span class="glyphicon glyphicon-arrow-left"></span> Cancelar</a>
    </div>
</div>