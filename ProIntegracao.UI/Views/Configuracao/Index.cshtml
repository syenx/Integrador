@model ProIntegracao.UI.ViewModel.ConfiguracaoViewModel
@section scripts{
    <script src="@Url.Content("~/Scripts/configuracao.js")"></script>
}
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","Home")">Home</a></li>
    <li><a href="@Url.Action("Index","Configuracao")">Configuração</a></li>
    <li><a href="#">Consulta</a></li>
</ol>

<fieldset>
    <legend>@ViewBag.Title</legend>

    <!-- PESQUISA -->
    <div class="form-inline well">
        <!--CHAVE-->
        <label for="busca">Chave :</label>
        <input name="termo" id="termo" type="text" class="form-control width750" maxlength="50" />

        <!--ATIVO-->
        <input type="radio" name="ativolistar" id="ativolistar" value="true" checked="checked">ATIVO

        <!--INATIVO-->
        <input type="radio" name="ativolistar" id="inativolistar" value="false"> INATIVO

        <a href="#" id="buscaConfiguracao" name="buscaConfiguracao" title="Buscar Configurações" class="btn btn-info btn-md col-sm-offset-1"><i class="fa fa-search"></i> Buscar</a>

        <a href="#" id="limparConfiguracao" name="limparConfiguracao" title="Limpar Configuração" class="btn btn-danger btn-md"><i class="fa fa-trash"></i> Limpar</a>

    </div>
    <!--Nova Configurações-->
    <a href="#" class="btn btn-info btn-md spacebutton" onclick="NovaConfiguracao();"><i class="fa fa-cogs fa-fw"></i> Nova Configuração</a>
    
    <!--Partial View Lista de Configuracoes -->
    <div id="listaConfiguracao"></div>

</fieldset>