@model IEnumerable<ProIntegracao.Data.Entidade.Pagina>
<table class="table table-hover dt-responsive nowrap" cellspacing="0" id="paginas">
    <thead>
        <tr>
            <th class="text-left">MENU</th>
            <th class="text-left">URL</th>
            <th class="text-left">PÁGINA</th>
            <th class="text-left">DATA CADASTRO</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Menu.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Url)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@item.DtCadastro.ToShortDateString()</td>
                    <td>

                        <a href="#" onclick="EditarPagina(@item.Id);"title="Editar registro">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                        |
                        <a href="#" onclick="AbrirModalExcluir(@item.Id, 'Pagina');" title="Excluir registro">
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
